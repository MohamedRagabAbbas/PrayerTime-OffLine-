                        <Button Text="تسابيح" FontFamily="font2" HorizontalOptions="Center" VerticalOptions="Center"  TextColor="Black" FontSize="22" CornerRadius="100"  BorderColor="#FFDCAE" BackgroundColor="#ADCF9F" Opacity=".7" HeightRequest="60"  WidthRequest="400" Clicked="Button_Clicked_4"/>
